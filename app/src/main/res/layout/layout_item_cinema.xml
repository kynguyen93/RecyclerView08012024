<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="5dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10">

    <ImageView
        android:id="@+id/image_view_cinema"
        android:src="@drawable/galaxy_nguyen_du"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:scaleType="centerCrop" />
    
    <LinearLayout
        android:layout_gravity="center"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Galaxy Nguyễn Du"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_view_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:textColor="#856D6D"
            tools:text="116 Nguyễn Du, Quận 1, Tp.HCM" />

        <TextView
            android:id="@+id/text_view_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="19002224"
            android:textSize="12sp"
            android:textColor="#473939" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="3"
        android:paddingEnd="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center|end" >

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/icon_pin" />

        <TextView
            android:id="@+id/text_view_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0683E6"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            tools:text="461 m" />

    </LinearLayout>


</LinearLayout>
</androidx.cardview.widget.CardView>
